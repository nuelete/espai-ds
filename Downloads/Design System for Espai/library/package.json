{
  "name": "@espai/design-system",
  "version": "1.0.0",
  "description": "Espai Design System - Relief and clarity, not urgency or alarm. A complete design system for customer and revenue risk platforms.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external react --external react-dom",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "design-system",
    "react",
    "components",
    "espai",
    "revenue-risk",
    "customer-analytics"
  ],
  "author": "Your Organization",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "lucide-react": "^0.487.0",
    "recharts": "^2.15.2",
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/espai-design-system.git"
  }
}
